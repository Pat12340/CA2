@model IEnumerable<ContactTracingApp.Models.Contact>

@{
    ViewBag.Title = "My Contacts";
}
@section Style
{
    <link href="@Url.Content("~/Style/MyContacts.css")" rel="stylesheet" type="text/css" />
}

<h2>My Contacts</h2>


<p><a class="btn btn-default button-create" href="@Url.Action("addNewContacts", "Home")">Create New</a></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateMet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistanceKept)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeSpent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.DateMet.ToString("dd MMM yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <div class="email">@Html.DisplayFor(modelItem => item.Email)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceKept) Meters
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpent) Minutes
            </td>
            <td >
            <td class="btn btn-default button-create" >
                @Html.ActionLink("Edit", "EditContacts", new { id = item.Id })
            </td>
        </tr>
    }

</table>
